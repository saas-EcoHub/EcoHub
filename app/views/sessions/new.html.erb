<h1>Sign In</h1>

<%= form_tag sign_in_path, :class => 'form' do %>
<div class="mb-3">
  <%= label :user, :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :user, :email, :class => 'form-control', placeholder: "example@mail.com"%>
</div>
<div class="mb-3">
  <%= label :user, :password, 'Password', :class => 'col-form-label'%>
  <%= password_field  :user, :password, :class => 'form-control', placeholder: "password" %>
</div>

<div class="mb-3">
  <%= submit_tag 'Sign In', :class => 'btn btn-primary' %>
</div>
<% end %>